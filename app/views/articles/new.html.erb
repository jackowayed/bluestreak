<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :section %><br />
    <%= f.select :section, sections %>
    <!--<%= select_tag( :section, options_for_select(["Editorial",
    "Entertainment", "Features", "News", "School News", "Sports"]))%>-->
    <!--<%= f.text_field :section %>-->
  </p>
<% if "Jennifer" == "l337" -%>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
<% end -%>
  <!--<p>
      </p>-->
  <p>
    <!--<br />
    <%= f.text_field :issue %>-->
    <%= render :partial => "issue_select", :locals => {:f=>f }%>
    <% if false -%>
    <%= f.label :issue_id %>
    <%= f.select(:issue_id, Issue.find(:all).collect{|i|
    [i.to_s, i.id]}.reverse) %>
    <% end -%>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :author_position %><br />
    <%= f.text_field :author_position %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :front_rank %><br />
    <%= f.text_field :front_rank %>
  </p>
  <p>
    <%= f.label :section_rank %><br />
    <%= f.text_field :section_rank %>
  </p>

  <% if false -%>
  <p>
    <%= f.label :image %>
    <%= f.file_field :uploaded_data %>
  </p>
  <% end -%>


  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
